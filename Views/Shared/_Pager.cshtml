@model CrusadeServices.Utilities.Pager;

<div class="container">
	@if (Model.TotalPages > 0)
	{
		<ul class="pagination justify-content-end">
			@if (Model.CurrentPage > 1)
			{
				<li>
					<a class="page-link" asp-controller="Customers" asp-action="Index" asp-route-pg="1">First</a>
				</li>
				<li>
					<a class="page-link" asp-controller="Customers" asp-action="Index" asp-route-pg="@(Model.CurrentPage-1)">Previous</a>
				</li>
			}
			@for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
			{
				<li class="page-item @(pge==Model.CurrentPage ? "active" : "")">
					<a class="page-link" asp-asp-controller="Customers" asp-action="Index" asp-route-pg="@pge">@pge</a>
				</li>
			}
			@if (Model.CurrentPage < Model.TotalPages)
			{
				<li>
					<a class="page-link" asp-controller="Customers" asp-action="Index" asp-route-pg="@(Model.CurrentPage + 1)">Next</a>
				</li>
				<li>
					<a class="page-link" asp-controller="Customers" asp-action="Index" asp-route-pg="@(Model.TotalPages)">Last</a>
				</li>
			}
		</ul>
	}
</div>